<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.CountingFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >


        <TextView
            android:id="@+id/tasbeha1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"

            android:layout_marginEnd="8dp"
            android:text=" التسبيحات "
            android:textColor="@color/yellow"
            android:textSize="@dimen/_20ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/tasbehaAll" />

        <TextView
            android:id="@+id/tasbehaAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="كل التسبيحات "
            android:textColor="@color/yellow"
            android:textSize="@dimen/_20ssp"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />


        <Button
            android:id="@+id/tasbehaview"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_background"
            android:clickable="false"
            android:text="0"
            app:layout_constraintEnd_toEndOf="@+id/tasbeha1"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/tasbeha1"
            app:layout_constraintTop_toBottomOf="@+id/tasbeha1" />

        <Button
            android:id="@+id/tasbehaAllview"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_background"
            android:clickable="false"
            android:text="0"
            app:layout_constraintEnd_toEndOf="@+id/tasbehaAll"
            app:layout_constraintStart_toStartOf="@+id/tasbehaAll"
            app:layout_constraintTop_toBottomOf="@+id/tasbehaAll" />


        <ImageView
            android:id="@+id/sebhafoto"
            android:layout_width="188dp"
            android:layout_height="144dp"
            android:elevation="50dp"
            android:src="@drawable/sebha"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.321"
            tools:targetApi="lollipop" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sebhafoto"
            app:srcCompat="@drawable/ic_refresh" />


        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:background="@drawable/button_background"
            android:popupBackground="@drawable/button_background"
            android:spinnerMode="dropdown"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:textAlignment="center"


            app:layout_constraintVertical_bias="0.578" />


    </android.support.constraint.ConstraintLayout>


</FrameLayout>